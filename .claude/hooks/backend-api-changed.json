{
  "name": "backend-api-changed",
  "description": "当backend API文件变更时，提醒重新生成Flutter API客户端代码",
  "enabled": true,
  "triggers": [
    {
      "type": "pre-save",
      "file_patterns": [
        "backend/app/main.py",
        "backend/app/schemas.py",
        "backend/app/models/*.py",
        "backend/app/services/*.py"
      ]
    }
  ],
  "handler": "python",
  "script": "hooks/backend_api_check.py"
}
