# Novel Builder 环境变量配置
# 复制此文件为 .env 并填写实际值

# ===========================================
# 核心配置（必需）
# ===========================================

# API 访问令牌 - 用于保护后端 API
NOVEL_API_TOKEN=your_secure_api_token_here

# 启用的小说爬虫站点
# 可选值：alice_sw,shukuge,xspsw,wdscw,aisxs (用逗号分隔)
NOVEL_ENABLED_SITES=alice_sw,shukuge,xspsw,wdscw

# 数据库连接字符串
DATABASE_URL=postgresql://novel_user:your_password@localhost:5432/novel_db

# ===========================================
# 数据库配置
# ===========================================

POSTGRES_DB=novel_db
POSTGRES_USER=novel_user
POSTGRES_PASSWORD=secure_password_here

# ===========================================
# 服务器配置
# ===========================================

# 调试模式（生产环境设置为 false）
DEBUG=false

# 日志级别（DEBUG, INFO, WARNING, ERROR）
LOG_LEVEL=INFO

# 服务器端口
HOST=0.0.0.0
PORT=8000

# ===========================================
# AI 功能配置（可选）
# ===========================================

# Dify AI 工作流配置
# DIFY_API_URL=https://api.dify.ai/v1
# DIFY_API_TOKEN=your_dify_api_token_here

# ===========================================
# 缓存配置
# ===========================================

# Redis 缓存（可选）
# REDIS_URL=redis://localhost:6379/0

# 缓存过期时间（秒）
CACHE_TTL=3600

# ===========================================
# 代理配置（可选）
# ===========================================

# HTTP 代理（如果需要）
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080

# ===========================================
# 安全配置
# ===========================================

# JWT 密钥（用于会话管理）
SECRET_KEY=your_secret_key_here_generate_long_random_string

# 访问令牌过期时间（分钟）
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS 允许的源
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3154"]

# ===========================================
# 文件上传配置
# ===========================================

# 最大上传大小（字节）
MAX_UPLOAD_SIZE=10485760

# 上传目录
UPLOAD_DIR=./uploads